{
  "name": "cherub-protocol",
  "author": "Pindaroso <me@pindaroso.com>",
  "version": "0.1.0",
  "description": "Inverse Perpetuals (3, 3) DAO",
  "scripts": {
    "app:start": "cd app && yarn start",
    "app:build": "cd app && yarn build",
    "docs:start": "cd docs && yarn start",
    "protocol:airdrop": "while true; do solana airdrop 5; sleep 10; done",
    "protocol:build:devnet": "anchor build -- --features \"devnet\"",
    "protocol:clean": "cargo clean",
    "protocol:deploy:devnet": "solana config set --url https://api.devnet.solana.com && anchor deploy",
    "protocol:deploy:localnet": "solana config set --url http://127.0.0.1:8899 && anchor deploy",
    "protocol:test:devnet": "anchor test",
    "protocol:test:localnet": "anchor test --detach"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.16.2",
    "@project-serum/serum": "^0.13.60",
    "@pythnetwork/client": "^2.3.2",
    "@solana/spl-token": "^0.1.8",
    "@solana/wallet-adapter-base": "^0.6.0",
    "@solana/wallet-adapter-react": "^0.10.3",
    "@solana/wallet-adapter-react-ui": "^0.2.1",
    "@solana/wallet-adapter-wallets": "^0.8.1",
    "@solana/web3.js": "^1.29.2",
    "ansi-regex": "^5.0.1",
    "chart.js": "^3.5.1",
    "fs": "^0.0.1-security",
    "react-chartjs-2": "^3.0.5"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.0.3"
  }
}
